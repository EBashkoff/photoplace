<%= content_for :section_title do %>
  <h3 class="panel-title pad-top pad-bottom">
    Edit Album
  </h3>
<% end %>

<div class="container-fluid">
  <div class="row row-centered">
    <div class="col-lg-3 col-lg-offset-4">
      <div class="form-group pad-top">
        <%= form_for([:admin, album], method: :put) do |f| %>
          <%= f.hidden_field :id %>
          <%= f.hidden_field :collection_id %>

          <fieldset class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
            <%= f.first_error :title %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
            <%= f.first_error :description %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.label 'Album Location' %>
            <%= f.text_field :path, class: "form-control", disabled: true %>
          </fieldset>

          <%= link_to 'Back', :back, class: "btn btn-primary btn-sm" %>
          <%= submit_tag 'Save', class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
