<% content_for :title do %>
    Log In | bashkoff-family.com
<% end %>

<div class="row">
  <div class="column-modified col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= form_for form, :url => session_path do |f| %>
            <%= hidden_field_tag :rurl, params[:rurl] %>
            <div class="form-group">
              <label>Username</label>
              <%= f.text_field :user_name, value: session[:user_name], class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Password</label>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="text-center">
              <%= submit_tag "Log In", class: 'btn' %>
            </div>
        <% end %>
      </div>
    </div>
    <h4>Other actions:</h4>
    <ul>
      <li><a href="https://www.bashkoff-family.com">Reset your password.</a></li>
      <li><a href="https://www.bashkoff-family.com">Create an account.</a></li>
    </ul>
  </div>
</div>
