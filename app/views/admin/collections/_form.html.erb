<%= content_for :section_title do %>
  <h3 class="panel-title pad-top pad-bottom"><%= local_assigns[:title] %></h3>
<% end %>

<div class="container-fluid">
  <div class="row row-centered">
    <div class="col-lg-3 col-lg-offset-4">
      <div class="form-group pad-top">
        <%= form_for([:admin, collection], method: local_assigns[:method]) do |f| %>
          <fieldset class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.first_error :name %>
          </fieldset>

          <%= link_to 'Back', admin_collections_url, class: "btn btn-primary btn-sm" %>
          <%= submit_tag 'Save', class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
