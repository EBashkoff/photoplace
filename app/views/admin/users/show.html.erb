<%= content_for :section_title do %>
  <h3 class="panel-title pad-top pad-bottom">User Information</h3>
<% end %>

<div class="container-fluid">
  <div class="row row-centered">
    <div class="col-lg-6 col-lg-offset-3">
      <table class="table table-striped table-bordered">
        <tbody>

        <tr>
          <td><strong>Username:</strong></td>
          <td><%= user.user_name %></td>
        </tr>

        <tr>
          <td><strong>Name:</strong></td>
          <td><%= user.real_name %></td>
        </tr>

        <tr>
          <td><strong>Email:</strong></td>
          <td><%= user.email %></td>
        </tr>

        <tr>
          <td><strong>Admin:</strong></td>
          <td><%= user.is_admin? ? "Yes" : "No" %></td>
        </tr>

        <% if user.settings_hash.present? %>
          <% user.settings_hash.each do |key, value| %>
            <tr>
              <td><strong><%= key.humanize %>:</strong></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        <% end %>

        </tbody>
      </table>

      <%= link_to 'Back', admin_users_path, class: "btn btn-primary btn-sm" %>
      <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
