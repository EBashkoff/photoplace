<div class="container-fluid">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Admin</th>
        <th>Email</th>
        <th colspan="2">
          <%= link_to 'New User', new_admin_user_path, class: "btn btn-primary btn-sm pull-right" %>
        </th>
      </tr>
      </thead>

      <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= link_to user.user_name, admin_user_path(user) %></td>
          <td><%= link_to user.real_name, admin_user_path(user) %></td>
          <td><%= user.is_admin? ? "Yes" : "No" %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td>
            <%= link_to 'Destroy',
                        admin_user_path(user),
                        method: :delete,
                        data:   { confirm: 'Are you sure?' }
            %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate users %>
  </div>
</div>
