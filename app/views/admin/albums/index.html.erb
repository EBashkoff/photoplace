<div class="container-fluid">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Collection</th>
        <th>Title (click to show)</th>
        <th>Description</th>
        <th>Path</th>
        <th>Pictures</th>
        <th>
          <%= link_to 'New Album', new_admin_album_path, class: "btn btn-primary btn-sm" %>
        </th>
      </tr>
      </thead>

      <tbody>
      <% albums.each do |album| %>
          <tr>
            <td><%= album.collection_name %></td>
            <td><%= link_to album.title, admin_album_path(album.id) %></td>
            <td><%= album.description %></td>
            <td><%= album.path %></td>
            <td><%= album.photo_count %></td>
            <td><%= link_to 'Edit', edit_admin_album_path(album.id) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate albums %>
  </div>

</div>
