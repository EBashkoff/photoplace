<% content_for :head do %>
    <%= javascript_include_tag 'collection' %>
<% end %>

<div class="container">
<div id="smooth-menu"  style="background-color: #F0F0F0">
  <ul>
    <% collections.each do |collection| %>
        <li>
          <%= link_to collection.name, "#" %>
          <ul class="second-level">
            <% collection.albums.each do |album| %>
                <li>
                  <a title href="<%= album_path(collection.name, album.name) %>"><%= album.name %></a>
                </li>
            <% end %>
          </ul>
        </li>
    <% end %>
  </ul>
</div>
</div>
