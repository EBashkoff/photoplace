<% content_for :head do %>
    <script type="text/javascript">
      $(document).ready(function () {
            $('ul.tree').hide();
            $('.tree-toggle').click(function () {
                  $('ul.tree').hide(200);
                  $(this).parent().children('ul.tree').toggle(200)
                }
            )
          }
      );
    </script>
<% end %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 column-modified text-center center-panel">
      <div class="well">
      <h3>Albums</h3><hr/>
        <ul class="nav nav-list">
          <% collections.sort_by(&:name).each do |collection| %>
              <li>
                <label class="tree-toggle nav-header" style="font-size: x-large"><%= collection.name %></label>
                <ul class="nav nav-list tree">
                  <% collection.albums.each do |album| %>
                      <li>
                        <a title href="<%= album_thumbs_path(collection.name, album.name) %>"><%= album.name %></a>
                      </li>
                  <% end %>
                </ul>
              </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-7 column-modified text-center">
      <div class="well hidden-sm">
        <h3>Welcome to our Website!</h3><hr/>
        <%= image_tag 'WebCollage.jpg', style: "width: 100%;", class: "img-responsive" %>
      </div>
    </div>
  </div>
</div>
