<div class="container-fluid">
  <div class="row row-centered">
    <div class="col-lg-3 col-lg-offset-4">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Album Name</strong><br />
        <%= album.name %>
      </p>

      <p>
        <strong>Number of Photos</strong><br />
        <%= album.photos.full.length %>
      </p>

      <p>
        <strong>Title</strong><br />
        <%= album.title %>
      </p>

      <p>
        <strong>Description</strong><br />
        <%= album.description %>
      </p>

      <p>
        <strong>Album Location</strong><br />
        <%= album.path %>
      </p>

      <%= link_to 'Edit', edit_album_path(album.id), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Back', albums_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
